# Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=postgres://pustaka:password@localhost:5432/pustaka?sslmode=disable
POSTGRES_PASSWORD=password
POSTGRES_USER=pustaka
POSTGRES_DB=pustaka

# Neo4j Configuration
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Redis Configuration
REDIS_URL=redis://:redispassword@localhost:6379
REDIS_PASSWORD=redispassword

# JWT Configuration
JWT_SECRET=super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_TTL=24h
JWT_REFRESH_TOKEN_TTL=168h

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Request-ID

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=10MB

# Environment
ENVIRONMENT=development

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# LOG_LEVEL=warn
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# JWT_SECRET=your-super-secure-production-secret-key-at-least-32-characters-long
# REDIS_URL=redis://:your-redis-password@redis:6379